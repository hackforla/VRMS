{
  "name": "vrms-server",
  "version": "0.3.0",
  "description": "VRMS Server",
  "scripts": {
    "start": "docker-compose up",
    "start:rebuild": "docker-compose build --no-cache --force-rm && docker-compose up",
    "start:local": "concurrently \"cd backend && npm run dev\" \"cd client && npm run start\"",
    "test:backend": "cd backend && npm run test",
    "test:client": "cd client && npm run test"
  },
  "dependencies": {
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "cross-var": "^1.1.0",
    "dotenv-cli": "^3.2.0"
  },
  "devDependencies": {
    "cypress": "^5.0.0",
    "start-server-and-test": "^1.11.3"
  }
}
